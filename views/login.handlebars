<main>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Login</h2>
                <form class="form login-form">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark input-text" id="inputGroup-sizing-default">Email:</span>
                        </div>
                        <input type="text" class="form-input" id="email-login">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark input-text" id="inputGroup-sizing-default">Password:</span>
                        </div>
                        <input type="password" class="form-input" id="password-login">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-dark" type="submit">Login</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <h2>Signup</h2>
                <form class="form signup-form">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark input-text" id="inputGroup-sizing-default">Name:</span>
                        </div>
                        <input type="text" class="form-input" id="name-signup">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark input-text" id="inputGroup-sizing-default">Email:</span>
                        </div>
                        <input type="text" class="form-input" id="email-signup">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark input-text" id="inputGroup-sizing-default">Password:</span>
                        </div>
                        <input type="password" class="form-input" id="password-signup">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-dark" type="submit">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="./js/login.js"></script>